#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongEndMsg>:
    size: 600, 150
    button: btn.__self__

    canvas:
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        font_size: 70
        center_x: root.center_x
        top: root.top
        id: pong_end_msg
        text: str(root.displayText)
        color: 0.1, 0.1, 0.1, 1
    Button:
        id: btn
        background_color: 0,1,0.8,1
        text: "Restart the game"
        center_x: root.center_x
        top: root.top-100
        size: root.width, 50


<ProjectPage>:
    canvas:
        size: 400, 800
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
