<MainWindow>:
    orientation:'vertical'
    canvas.before:
      Color:rgba[1,1,1,1]
      Rectangle:
        pos:self.pos
        size:self.size
    ScreenManager:
      id:scrn_mngr
      Screen:
        name:'scrn-main'
        BoxLayout:
         canvas.before:
           Color:
           rgba:rgba('#0e1574ff')
           Triangle:
            points:[0,self.size[1],self.size[0],
             self.size[1],0,self.size[1]-(.4*self.size)]
         orientation:'vertical'
         Button:
          text:'Feed me :'
          on_release = scrn_mngr.current = 'scrn_main'
    Screen:
      name:'scrn_main'
      BoxLayout:
        orientation:'vertical'
        Button:
          text:'Go to Dorokin'
          on_release:scrn_mngr.current = 'scrn_main'

    Screen
      name:'scrn-anim'
      BoxLayout:
        orientation:'vertical'
        Button:
          text:'Go to Dorokin-today'
          on_release:scrn_mngr.current = 'scrn_today'

    Screen
      name:'scrn-today'
      BoxLayout

